    <!--        <import type="com.slutsenko.cocktailapp.databinding.adapter.ViewPagerBindingAdapter.DataBindingConverter" />-->

    <!--        <import type="com.slutsenko.cocktailapp.databinding.adapter.Page" />-->

    <!--        <variable-->
