<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="cocktail"
            type="com.slutsenko.cocktailapp.presentation.viewmodel.AboutCocktailViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".presentation.ui.activity.AboutCocktailActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/abl_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            app:elevation="0dp">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/ctl_collaps"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="48dp"
                app:expandedTitleGravity="bottom|left"
                app:layout_scrollFlags="scroll|snap|exitUntilCollapsed">
<!--                app:title="@{cocktail.cocktailLiveData.strDrink}"-->

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_cocktail_full"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:scaleType="centerCrop"
                        app:layout_collapseMode="parallax"/>
<!--                        bind:iv_loadUrl="@{cocktail.cocktailLiveData.strDrinkThumb}"-->

                </FrameLayout>


                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/AppBar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin" />


            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            tools:context=".presentation.ui.activity.AboutCocktailActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_basic"
                    style="@style/about_cocktail_text.title"
                    android:text="@string/basic_information" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_16"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/about_cocktail_text"
                        android:layout_weight="1"
                        android:text="@string/name" />

                    <TextView
                        style="@style/about_cocktail_text"
                        android:layout_weight="2"
                        android:text="@{cocktail.currentCocktailLiveData.image}" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_16"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/about_cocktail_text"
                        android:layout_weight="1"
                        android:text="@string/alcohol" />

                    <TextView
                        style="@style/about_cocktail_text"
                        android:layout_weight="2" />
<!--                        android:text="@{cocktail.cocktailLiveData.strAlcoholic}" />-->
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_16"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/about_cocktail_text"
                        android:layout_weight="1"
                        android:text="@string/glass" />

                    <TextView
                        style="@style/about_cocktail_text"
                        android:layout_weight="2"/>
<!--                        android:text="@{cocktail.cocktailLiveData.strGlass}" />-->
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_ingredient_title"
                    style="@style/about_cocktail_text.title"
                    android:text="@string/ingredients" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_16"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_ingredient_names"
                        style="@style/about_cocktail_text"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_ingredient_values"
                        style="@style/about_cocktail_text"
                        android:layout_weight="2" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_instructions_title"
                    style="@style/about_cocktail_text.title"
                    android:text="@string/instructions" />

                <TextView
                    android:id="@+id/tv_instructions_value"
                    style="@style/about_cocktail_text"
                    android:layout_margin="@dimen/dp_16"/>
<!--                    android:text="@{cocktail.cocktailLiveData.strInstructions}" />-->

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <ImageView
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:onClick="back"
            android:src="@drawable/ic_back_24" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>