<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Splash" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>


    <style name="message">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorTextSecond</item>
        <item name="android:lineSpacingExtra">@dimen/font_10</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="drink_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:padding">@dimen/offset_8</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="about_cocktail_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:lineSpacingExtra">@dimen/dp_12</item>
    </style>

    <style name="about_cocktail_text.title">
        <item name="android:padding">@dimen/offset_8</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_18</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:lineSpacingExtra">@dimen/font_10</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="search_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@null</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:lineSpacingExtra">@dimen/dp_8</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="search_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/offset_8</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:elevation">@dimen/elevation_8</item>
    </style>

    <style name="fab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">@dimen/dp_16</item>
    </style>

    <style name="DialogFragment" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">@color/transparent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="Widget.PopupMenu" parent="">
        <item name="android:popupBackground" tools:ignore="PrivateResource">@drawable/mtrl_popupmenu_background</item>
        <item name="android:popupElevation">8dp</item>
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">1px</item>
        <item name="android:dropDownHorizontalOffset">-16dp</item>

    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:outlineSpotShadowColor" tools:ignore="NewApi">?colorPrimary</item>
        <item name="android:outlineAmbientShadowColor" tools:ignore="NewApi">?colorPrimary</item>
    </style>

    <style name="setting_layout_style">
        <item name="layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_20</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>
